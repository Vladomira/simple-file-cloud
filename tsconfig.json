{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  }
}
